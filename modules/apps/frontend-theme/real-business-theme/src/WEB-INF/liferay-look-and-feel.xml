<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.0.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_0_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.1.1+</version>
	</compatibility>
	<theme id="real-business-theme" name="real-business-theme">
		<template-extension>ftl</template-extension>
		<settings>
			<setting configurable="true" key="show-footer" type="checkbox" value="true" />
			<setting configurable="true" key="show-header" type="checkbox" value="true" />
			<setting configurable="true" key="show-header-search" type="checkbox" value="true" />
			<setting configurable="true" key="show-maximize-minimize-application-links" type="checkbox" value="false" />
			<setting configurable="true" key="wrap-content" type="checkbox" value="false" />
			<setting configurable="true" key="site-description" type="text" value="Only think about one thing at a time. Don't get greedy. Take your time. Speed will come later. Let's build some happy little clouds up here. What the devil. Maybe he has a little friend that lives right over here." />
			<setting configurable="true" key="show-facebook" type="checkbox" value="true" />
			<setting configurable="true" key="facebook-url" type="text" value="www.facebook.com" />
			<setting configurable="true" key="show-twitter" type="checkbox" value="true" />
			<setting configurable="true" key="twitter-url" type="text" value="www.twitter.com" />
			<setting configurable="true" key="show-pinterest" type="checkbox" value="true" />
			<setting configurable="true" key="pinterest-url" type="text" value="www.pinterest.com" />
			<setting configurable="true" key="show-google-plus" type="checkbox" value="true" />
			<setting configurable="true" key="google-plus-url" type="text" value="plus.google.com" />
			<setting configurable="true" key="show-skype" type="checkbox" value="true" />
			<setting configurable="true" key="skype-url" type="text" value="www.skype.com" />
			<setting configurable="true" key="show-instagram" type="checkbox" value="true" />
			<setting configurable="true" key="instagram-url" type="text" value="www.instagram.com" />
			<setting configurable="true" key="show-youtube" type="checkbox" value="true" />
			<setting configurable="true" key="youtube-url" type="text" value="www.youtube.com" />
			<setting configurable="true" key="show-linkedin" type="checkbox" value="true" />
			<setting configurable="true" key="linkedin-url" type="text" value="www.linkedin.com" />
		</settings>
		<roles>
			<role-name>User</role-name>
		</roles>
		<portlet-decorator id="barebone" name="Barebone">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="borderless" name="Borderless">
			<portlet-decorator-css-class>portlet-borderless</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorate">
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>
</look-and-feel>